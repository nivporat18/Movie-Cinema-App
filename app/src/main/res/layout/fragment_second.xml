<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_register"
    tools:context=".login.SecondFragment">




   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="center"
           >

           <TextView
               android:id="@+id/textView"
               android:layout_width="411dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="32dp"
               android:fontFamily="@font/rubik_mono_one"
               android:gravity="center"
               android:text="@string/register"
               android:textColor="@color/white"
               android:textSize="40sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <EditText
               android:id="@+id/et_firstNmae_register"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:background="@color/white"
               android:drawableRight="@drawable/ic_account_24"
               android:ems="10"
               android:layout_marginTop="15dp"
               android:hint="First Name"
               android:inputType="textPersonName"
               android:minHeight="48dp" />


           <EditText
               android:id="@+id/et_lastname_register"
               android:layout_width="215dp"
               android:layout_height="48dp"
               android:layout_marginTop="24dp"
               android:background="@color/white"
               android:hint="Last Name"
               android:drawableEnd="@drawable/ic_person_24"
               android:textColor="@color/black"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/et_firstNmae_register" />


           <EditText
               android:id="@+id/et_email_register"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="24dp"
               android:background="@color/white"
               android:ems="10"
               android:hint="Email"
               android:drawableEnd="@drawable/ic_email_24"
               android:inputType="textPersonName"
               android:minHeight="48dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/et_lastname_register" />

           <EditText
               android:id="@+id/et_password_register"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="24dp"
               android:background="@color/white"
               android:ems="10"
               android:hint="Password"
               android:drawableEnd="@drawable/ic_lock_24"
               android:inputType="textPassword"
               android:minHeight="48dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/et_email_register" />


           <Button
               android:id="@+id/button_register"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:text="@string/register"
               android:textSize="16sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/et_password_register" />


       </LinearLayout>

   </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>