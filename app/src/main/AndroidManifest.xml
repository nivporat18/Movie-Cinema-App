<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="niv.porat.cinema_world">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cinema_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cinema_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cinema_world">
        <activity
            android:name=".viewpager.OnBoarding"
            android:exported="false" />
        <activity
            android:name=".login.AuthActivity"
            android:exported="false"
            android:label="@string/title_activity_auth"
            android:theme="@style/Theme.Cinema_world.NoActionBar" />
        <activity
            android:name=".splashscreen.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>